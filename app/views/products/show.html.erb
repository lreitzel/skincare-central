
<h2><%= @product.name %></h2>
<br>
<% @product.reviews.each do |r| %>
    <ul>
    <li><%= link_to r.rating, product_review_path(@product, r) %> - <%= r.review_body %></li>
    </ul>
<% end %>
<br><br>
<%= link_to "Click Here to Create a Review for This Product", new_product_review_path(@product) %><br><br>
<% if current_user.id == @product.user_id %>
    <%= link_to "Edit Product", edit_product_path(@product) %>
    <br><br>
<% end %>